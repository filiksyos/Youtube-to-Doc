# YouTube to Doc Environment Variables

# Server Configuration
ALLOWED_HOSTS=localhost,127.0.0.1,youtubedoc.com,*.youtubedoc.com
DEBUG=False

# YouTube API (Optional - for enhanced features)
YOUTUBE_API_KEY=your_youtube_api_key_here

# OpenAI API (Optional - for AI-enhanced processing)
OPENAI_API_KEY=your_openai_api_key_here

# Cloud Storage (Optional - for large file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your_s3_bucket_name
AWS_REGION=us-east-1

# Database (Optional - for caching/analytics)
DATABASE_URL=sqlite:///./youtubedoc.db

# Security
SECRET_KEY=your-secret-key-here

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=10 

# --- Proxy Configuration (Cloud Deployment Only) ---
# Only needed for cloud platforms (Render, Heroku, AWS) to avoid YouTube IP blocks
# Local development works fine without these

# Option A: Webshare rotating residential proxies (recommended)
YTA_WEBSHARE_USERNAME=
YTA_WEBSHARE_PASSWORD=
YTA_WEBSHARE_LOCATIONS=

# Option B: Generic HTTP/HTTPS proxies (alternative to Webshare)
YTA_HTTP_PROXY=
YTA_HTTPS_PROXY=